
@{
}

@model List<AccountManager.DAL.Entities.Invoice>

<!-- Display the debts report -->
<h2>Debts Report</h2>
<table class="table">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Invoice Number</th>
            <th>Due Date</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        <!-- Render the rows for each invoice -->
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.Customer.Name</td>
                <td>@invoice.InvoiceNumber</td>
                <td>@invoice.DueDate.ToShortDateString()</td>
                <td>@invoice.TotalAmount.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
